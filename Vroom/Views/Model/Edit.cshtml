@model Vroom.Models.ViewModel.ModelViewModel
@using Vroom.Extensions
@{
	ViewData["Title"] = "Edit";
}
<br /><br /><br />

<h2 class="text-info">Edit Model of Vehicle</h2>
<form method="post" action="Edit">
	<input hidden asp-for="Model.Id" />
	<div class="form-group row">
		<div class="col-2">
			<label asp-for="Makes"></label>
		</div>
		<div class="col-4">
			<select asp-for="Model.MakeId" asp-items="Model.Makes.ToSelectListItem()" class="form-control"></select>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-2">
			<label asp-for="Model.Name"></label>
		</div>
		<div class="col-4">
			<input asp-for="Model.Name" class="form-control"/>
		</div>
		<br />
	</div>
		<div class="form-group">
			<input type="submit" class="btn btn-primary" asp-route-id=@Model.Model.Id value="Update" />
			<a asp-action="Index" class="btn btn-success">Back</a>
		</div>
</form>
